<?xml version="1.0" encoding="UTF-8"?>
<connector xmlns="http://java.sun.com/xml/ns/j2ee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee https://java.sun.com/xml/ns/j2ee/connector_1_5.xsd"
		version="1.5">
	<vendor-name>Spring Framework</vendor-name>
	<eis-type>Spring Connector</eis-type>
	<resourceadapter-version>1.0</resourceadapter-version>
	<resourceadapter>
		<resourceadapter-class>org.springframework.jca.context.SpringContextResourceAdapter</resourceadapter-class>
		<com.config-property>
			<com.config-property-name>ContextConfigLocation</com.config-property-name>
			<com.config-property-type>java.lang.String</com.config-property-type>
			<com.config-property-value>META-INF/applicationContext.xml</com.config-property-value>
		</com.config-property>
	</resourceadapter>
</connector>
